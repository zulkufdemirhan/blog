<section>
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <%= link_to "HUNS", root_path, class: "logo mb-6" %>
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
            Login to your account
        </h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4 md:space-y-6" }) do |f| %>
          <div>
            <%= f.label :email, class: "form-input-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
          </div>
          <div>
            <%= f.label :password, class: "form-input-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "form-checkbox" %>
                <%= f.label :remember_me, class: "form-checkbox-label" %>
              </div>
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
          <%= f.submit "Log in", class: "mr-2" %>
        <% end %>
      </div>
    </div>
  </div>
</section>