<% @blog_posts.each do |blog_post| %>
  <div>
    <% if blog_post.draft? %>
      <div class="p-2 rounded bg-gray-100 text-gray-900">Draft</div>
    <% elsif blog_post.scheduled? %>
      <div class="p-2 rounded bg-blue-100 text-blue-900">Schedule</div>
    <% end %>
    <h1><%= link_to blog_post.title, blog_post_path(blog_post) %></h1>
    <h2><%= blog_post.content %></h2>
  </div>
<% end %>

<% if @pagy.count > @pagy.items %>
  <div class="my-16">
    <%== pagy_info(@pagy, item_name: "posts")%>
    <%== pagy_nav(@pagy) %>
  </div>
<% end %>